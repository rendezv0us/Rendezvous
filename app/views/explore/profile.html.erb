<div class="container-fluid text-center" style="padding-bottom: 50px;">
  <div clas="row text-center">
    <% if current_user.secret %>
      <div class="col text-center">
    <% else %>
      <div class="col-xs-6">
    <% end %>
      <% if current_user.secret %>

      <% else %>
        <h1 style = "color: black;">Your Posts</h1>
        <li class="list-group-item"> <h4>Recent Posts</h4> </li>
        <% @p.each do |post| %>
          <li class="list-group-item">
            <div class="container-fluid">
              <%= link_to post.title.capitalize, post_path(post) %>
            </div>
          </li>
        <% end %>
        </div>
      <% end %>

    <% if current_user.secret %>
        <div class="col text-center">
    <% else %>
        <div class="col-xs-6">
    <% end %>
      <!--  -->
      <% if current_user.secret %>
        <h1 style = "color: white;">Your Messages</h1>
      <% else %>
        <h1 style = "color: black;">Your Messages</h1>
      <% end %>
      <!--  -->
      <li class="list-group-item"> <h4>Recent Messages</h4> </li>
      <% @latest.each do |mes| %>
        <li class="list-group-item">
          <div class="container-fluid">
            <b>
              <% if mes.sender == @current_user.username %>
                <%= mes.receiver %>
              <% elsif mes.receiver == @current_user.username %>
                <%= mes.sender %>
              <% end %>
              :</b>
            <%= link_to mes.content, message_path(mes) %>
          </div>
        </li>
      <% end %>
    </div>
  </div>
</div>